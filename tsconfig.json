{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",

    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },

    "strict": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "eslint.config.js", "tsup.config.ts"]
}
